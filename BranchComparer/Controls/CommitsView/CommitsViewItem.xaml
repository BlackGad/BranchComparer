<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BranchComparer.Controls.CommitsView">

    <ControlTemplate x:Key="{x:Static controls:CommitsViewItem+Resource.ControlTemplate}" TargetType="controls:CommitsViewItem">
        <Grid Margin="0,3,0,0" Focusable="False">
            <ContentPresenter />
        </Grid>
    </ControlTemplate>

    <Style x:Key="{x:Static controls:CommitsViewItem+Resource.ControlStyle}" TargetType="controls:CommitsViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template" Value="{StaticResource {x:Static controls:CommitsViewItem+Resource.ControlTemplate}}" />
    </Style>

</ResourceDictionary>