<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:theme="http://schemas.ps.com/2021/xaml/theme"
                    xmlns:tilesContentControl="clr-namespace:BranchComparer.Controls.TilesContentControl">

    <ControlTemplate x:Key="{x:Static tilesContentControl:TilesContentControl+Resource.ControlTemplate}" TargetType="tilesContentControl:TilesContentControl">
        <ItemsPresenter />
    </ControlTemplate>

    <Style x:Key="{x:Static tilesContentControl:TilesContentControl+Resource.ControlStyle}" TargetType="tilesContentControl:TilesContentControl">
        <Setter Property="BorderBrush" Value="{theme:Brush MainBorderDeep}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <tilesContentControl:TilesContentControlPanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template" Value="{StaticResource {x:Static tilesContentControl:TilesContentControl+Resource.ControlTemplate}}" />
    </Style>

</ResourceDictionary>