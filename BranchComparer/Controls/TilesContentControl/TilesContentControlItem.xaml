<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BranchComparer.Controls.TilesContentControl"
                    xmlns:theme="http://schemas.ps.com/2021/xaml/theme">

    <ControlTemplate x:Key="{x:Static controls:TilesContentControlItem+Resource.ControlTemplate}" TargetType="controls:TilesContentControlItem">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="{TemplateBinding CornerRadius}"
                Focusable="False">
            <ContentPresenter Margin="{TemplateBinding Padding}" />
        </Border>
    </ControlTemplate>

    <Style x:Key="{x:Static controls:TilesContentControlItem+Resource.ControlStyle}" TargetType="controls:TilesContentControlItem">
        <Setter Property="Padding" Value="2" />
        <Setter Property="Background" Value="{theme:Brush MainForeground}" />
        <Setter Property="Template" Value="{StaticResource {x:Static controls:TilesContentControlItem+Resource.ControlTemplate}}" />
    </Style>

</ResourceDictionary>